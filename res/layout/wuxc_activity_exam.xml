                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/exam_top_15"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/er15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/exam_top_16"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/er16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/exam_top_17"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
