                        android:src="@drawable/er20" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/text_topic_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="说明：专题在线考试为选择题，达不到分数线需重新答题，可多次答题。"
                android:textColor="#000000"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/lin_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_a"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_radio" />

                <TextView
                    android:id="@+id/topic_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:text="说明：专题在线考试为选择题，达不到分数线需重新答题，可多次答题。"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_b"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_radio" />

                <TextView
                    android:id="@+id/topic_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
