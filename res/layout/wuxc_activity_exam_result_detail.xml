<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rea_mytitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_height"
                android:background="@color/main_color" >

                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="@dimen/top_imageview_height"
                    android:layout_height="@dimen/top_imageview_height"
                    android:layout_marginLeft="@dimen/top_imageview_distance"
                    android:layout_marginTop="@dimen/top_imageview_distance"
                    android:src="@drawable/arrow_left" />

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_height"
                    android:layout_marginLeft="@dimen/top_height"
                    android:layout_marginRight="@dimen/top_height"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="试题解析"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/tmjx"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/tmjx1"
                    android:gravity="center_vertical"
                    android:text="试题解析"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_number"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/er1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:text="/20"
                    android:textColor="@color/main_color"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_topic_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="说明：专题在线考试为选择题，达不到分数线需重新答题，可多次答题。"
                android:textColor="#000000"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/lin_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_a"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_radio" />

                <TextView
                    android:id="@+id/topic_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:text="说明：专题在线考试为选择题，达不到分数线需重新答题，可多次答题。"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_b"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_radio" />

                <TextView
                    android:id="@+id/topic_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:text="说明：专题在线考试为选择题，达不到分数线需重新答题，可多次答题。"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_c"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_radio" />

                <TextView
                    android:id="@+id/topic_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:text="说明：专题在线考试为选择题，达不到分数线需重新答题，可多次答题。"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_d"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_radio" />

                <TextView
                    android:id="@+id/topic_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:text="说明：专题在线考试为选择题，达不到分数线需重新答题，可多次答题。"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_last"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_5_brown"
                    android:gravity="center"
                    android:text="上一题"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_5_red"
                    android:gravity="center"
                    android:text="下一题"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_topic_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:text="说明：专题在线考试为选择题，达不到分数线需重新答题，可多次答题。"
                android:textColor="#000000"
                android:textSize="16dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>