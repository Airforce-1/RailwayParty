<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/lin_all"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_pic"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic1"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:maxLines="2"
                android:text="2017-12-282017-12-282017-12-282017-12-282017-12-282017-12-282017-12-28"
                android:textColor="@color/text_grey"
                android:textSize="14dp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp" >

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/zhidu" />

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="46dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="02-28"
                        android:textColor="@color/text_grey"
                        android:textSize="14dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="48dp"
                    android:background="@color/text_line"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="52dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="标题 "
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_bi"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bi"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_guanzhu"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="234"
                    android:textColor="@color/text_grey"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/zan"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_zan"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="234"
                    android:textColor="@color/text_grey"
                    android:textSize="14dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_line" />

</LinearLayout>