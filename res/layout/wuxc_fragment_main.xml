<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rea_mytitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/main_color" >

        <ImageView
            android:id="@+id/roundimage_headimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo_top" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:layout_marginLeft="@dimen/top_height"
            android:layout_marginRight="@dimen/top_height"
            android:gravity="center"
            android:singleLine="true"
            android:text="中铁一局五公司智慧党建云平台"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/image_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:src="@drawable/search_top" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/top_height" >

        <RelativeLayout
            android:id="@+id/main_top_bac"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/thiseeee" >

            <ImageView
                android:id="@+id/headimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/index_user" />

            <TextView
                android:id="@+id/text_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headimg"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="请登录"
                android:textColor="@color/main_color"
                android:textSize="16dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_four"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/main_top_bac"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/rel_inform"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/rel_9"
                        android:layout_width="50dp"
                        android:layout_height="50dp" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_margin="16dp"
                            android:src="@drawable/index1" />

                        <TextView
                            android:id="@+id/text_1"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/tag"
                            android:gravity="center"
                            android:text="19"
                            android:textColor="#ffffff"
                            android:textSize="12dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="通知公告"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/text_line" />

                <LinearLayout
                    android:id="@+id/rel_policy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/rel_10"
                        android:layout_width="50dp"
                        android:layout_height="50dp" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_margin="16dp"
                            android:src="@drawable/index2" />

                        <TextView
                            android:id="@+id/text_2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/tag"
                            android:gravity="center"
                            android:text="19"
                            android:textColor="#ffffff"
                            android:textSize="12dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="两学一做"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/rel_party_manage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/rel_11"
                        android:layout_width="50dp"
                        android:layout_height="50dp" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_margin="16dp"
                            android:src="@drawable/index3" />

                        <TextView
                            android:id="@+id/text_3"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/tag"
                            android:gravity="center"
                            android:text="19"
                            android:textColor="#ffffff"
                            android:textSize="12dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="党务管理"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="@color/text_line" />

                <LinearLayout
                    android:id="@+id/rel_weblearn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/rel_12"
                        android:layout_width="50dp"
                        android:layout_height="50dp" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_margin="16dp"
                            android:src="@drawable/index4" />

                        <TextView
                            android:id="@+id/text_4"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/tag"
                            android:gravity="center"
                            android:text="19"
                            android:textColor="#ffffff"
                            android:textSize="12dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="网上党校"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_5dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/lin_four"
            android:background="@color/text_line" />

        <LinearLayout
            android:id="@+id/lin_hor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text_5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rel_clean"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="42" >

                <RelativeLayout
                    android:layout_width="98dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="党风廉洁建设"
                        android:textColor="@color/main_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/text_5"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/tag"
                        android:gravity="center"
                        android:text="19"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/text_line" />

            <RelativeLayout
                android:id="@+id/rel_disciplinary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="37" >

                <RelativeLayout
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="纪检监察"
                        android:textColor="@color/main_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/text_6"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/tag"
                        android:gravity="center"
                        android:text="19"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/text_line" />

            <RelativeLayout
                android:id="@+id/rel_member"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="37" >

                <RelativeLayout
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="职工之家"
                        android:textColor="@color/main_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/text_7"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/tag"
                        android:gravity="center"
                        android:text="19"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/text_line" />

            <RelativeLayout
                android:id="@+id/rel_flag"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="37" >

                <RelativeLayout
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="团旗飘飘"
                        android:textColor="@color/main_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/text_8"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/tag"
                        android:gravity="center"
                        android:text="19"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_go_zb"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/go_zb" />

</RelativeLayout>